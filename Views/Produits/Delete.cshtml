@model ECOMMERCE_Project_ASPNET.Models.Produit

@{
    ViewBag.Title = "Delete";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="margin-top:25px;">
        <h2 class="text-center" style="font-size: 5rem; margin-bottom: 25px; color: #eeb951;">Are you sure you want to delete this?</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 pb-5">


                <!--Form with header-->
                @{
                    var UserName = Model.AspNetUser.UserName.Split('@').First();
                }


               



                    
                    <div class="card " style="border-color: #eeb951;border-radius: 25px">
                        <div class="card-header p-0" style="background-color: #eeb951; border-top-left-radius: 20px; border-top-right-radius: 20px;">
                            <div class="  text-center ">
                                <h3 style="font-size:3rem;"> @Html.DisplayFor(model => model.LibelleProd)</h3>

                            </div>
                        </div>
                        <div class="card-body p-3">

                            <!--Body-->
                            <div class="form-group" style="margin-left:85px;margin-top:25px;margin-bottom:15px;">
                                <div class="input-group mb-2">
                                    <p style="height: 55px; font-size: 2rem; margin-bottom: 0px; padding: 5px; "> <span style="font-weight:bold">@ECOMMERCE_Project_ASPNET.Resources.Views.Produits.Details.SellerName : </span>  @UserName</p>
                                </div>
                            </div>


                            <div class="form-group" style="margin-left:85px;margin-top:15px;margin-bottom:15px;">
                                <div class="input-group mb-2">
                                    <p style="height: 55px; font-size: 2rem; margin-bottom: 8px;padding:5px; "> <span style="font-weight:bold">@ECOMMERCE_Project_ASPNET.Resources.Views.Produits.Details.DescriptionProd : </span>  @Html.DisplayFor(model => model.DescriptionProd)</p>
                                </div>
                            </div>


                            <div class="form-group" style="margin-left:85px;margin-top:25px;margin-bottom:15px;">
                                <div class="input-group mb-2">
                                    <p style="height: 55px; font-size: 2rem;  margin-bottom: 8px;padding:5px; "><span style="font-weight:bold"> @ECOMMERCE_Project_ASPNET.Resources.Views.Produits.Details.PorductPrice : </span> @Html.DisplayFor(model => model.PrixProd)</p>
                                </div>
                            </div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="text-center" style="margin-left:95px;">
                                    <input type="submit" style="font-size: 2rem; background-color: #eeb951; border-radius: 15px;margin-bottom:20px;" value="Delete" class="btn  btn-block  py-2 " />
                                </div>
                            }



                            </div>

                    </div>
                

                <!--Form with header-->


            </div>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}