@model ECOMMERCE_Project_ASPNET.Models.AspNetUser

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="margin-top:25px;">
        <h2 class="text-center" style="font-size: 5rem; margin-bottom: 25px; color: #eeb951;"> @ECOMMERCE_Project_ASPNET.Resources.Views.Users.Details.Title</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 pb-5">


                <!--Form with header-->
                @{
                    var UserName = Model.UserName.Split('@').First();
                 
                }


                


                    @Html.AntiForgeryToken()
                    <div class="card " style="border-color: #eeb951;border-radius: 25px">
                        <div class="card-header p-0" style="background-color: #eeb951; border-top-left-radius: 20px; border-top-right-radius: 20px;">
                            <div class="  text-center ">
                                <h3 style="font-size:3rem;"> @UserName</h3>

                            </div>
                        </div>
                        <div class="card-body p-3">

                            <!--Body-->
                            <div class="form-group" style="margin-left:85px;margin-top:25px;margin-bottom:15px;">
                                <div class="input-group mb-2">
                                    <p style="height: 55px; font-size: 2rem;  margin-bottom: 8px;   padding: 5px;  "> <span style="font-weight:bold"> @ECOMMERCE_Project_ASPNET.Resources.Views.Users.Details.SellerEmail  : </span>   @Html.DisplayFor(model => model.Email)</p>
                                </div>
                            </div>


                            <div class="form-group" style="margin-left:85px;margin-top:25px;margin-bottom:15px;">
                                <div class="input-group mb-2">
                                    <p style="height: 55px; font-size: 2rem; margin-bottom: 8px;padding:5px; "> <span style="font-weight:bold"> @ECOMMERCE_Project_ASPNET.Resources.Views.Users.Details.SellerPhone : </span>  @Html.DisplayFor(model => model.PhoneNumber)</p>
                                </div>
                            </div>


                            <div class="form-group" style="margin-left:85px;margin-top:25px;margin-bottom:15px;">
                                <div class="input-group mb-2">
                                    <p style="height: 55px; font-size: 2rem; margin-bottom: 8px;padding:5px; "> <span style="font-weight:bold"> @ECOMMERCE_Project_ASPNET.Resources.Views.Users.Details.Address : </span> @Html.DisplayFor(model => model.Adresse)</p>
                                </div>
                            </div>



                        </div>

                    </div>
                

                <!--Form with header-->


            </div>
        </div>
    </div>
</body>
</html>